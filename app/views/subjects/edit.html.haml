.d-flex.justify-content-between.align-items-center.mb-4
  %div
    %h4.fw-bold.py-0.m-0
      %span.text-muted.fw-light= 'Subject /'
      = t('issues.resolutions.table.edit')
  %div
    %a.btn.btn-sm.btn-primary{ href: college_subjects_path(current_college.slug), 'data-bs-html': 'true', 'data-bs-offset': '0,4', 'data-bs-original-title': '<span>Back</span>', 'data-bs-placement': 'bottom', 'data-bs-toggle': 'tooltip', type: 'button' }
      %i.bx.bx-chevron-left
.row
  .col-md-12
    .card.mb-4
      .card-body
        = render 'form', subject: @subject, url: college_subject_path(current_college.slug, @subject.slug)
