.d-flex.justify-content-between.align-items-center.mb-4
  %div
    %h4.fw-bold.py-0.m-0
      %span.text-muted.fw-light= 'Fee /'
      = t('issues.resolutions.table.new')
  %div
    %a.btn.btn-sm.btn-primary{ href: college_department_course_fees_path(current_college.slug, department_slug: @department.slug, course_slug: @course.slug), 'data-bs-html': 'true', 'data-bs-offset': '0,4', 'data-bs-original-title': '<span>Back</span>', 'data-bs-placement': 'bottom', 'data-bs-toggle': 'tooltip', type: 'button' }
      %i.bx.bx-chevron-left
.row
  .col-md-12
    .card.mb-4
      .card-body
        = render 'form', fee: @fee, url: college_department_course_fees_path(current_college.slug)
