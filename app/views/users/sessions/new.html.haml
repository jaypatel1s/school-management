.container
  .main-content.d-flex.flex-column.p-0
    .m-auto.m-1230
      .row.align-items-center
        .col-lg-6.d-none.d-lg-block
          = image_tag('login.jpg', alt: 'login', class: "rounded-3")
        .col-lg-6
          .mw-480.ms-lg-auto
            %a.d-inline-block.mb-4{ href: "/" }
              = image_tag('logo.svg', alt: 'login', class: "rounded-3 for-light-logo")
              = image_tag('white-logo.svg', alt: 'login', class: "rounded-3 for-dark-logo")
            %h3.fs-28.mb-2 Welcome back to Trezo!
            %p.fw-medium.fs-16.mb-4 Sign In with social account or enter your details
            .row.justify-content-center
              .col-lg-4.col-sm-4
                %a.btn.btn-outline-secondary.bg-transparent.w-100.py-2.hover-bg.mb-4{ href: "https://www.google.com/", style: "border-color: #D6DAE1;", target: "_blank" }
                  = image_tag('google.svg', alt: 'google')
              .col-lg-4.col-sm-4
                %a.btn.btn-outline-secondary.bg-transparent.w-100.py-2.hover-bg.mb-4{ href: "https://www.facebook.com/", style: "border-color: #D6DAE1;", target: "_blank" }
                  = image_tag('facebook2.svg', alt: 'facebook2')
              .col-lg-4.col-sm-4
                %a.btn.btn-outline-secondary.bg-transparent.w-100.py-2.hover-bg.mb-4{ href: "https://www.apple.com/", style: "border-color: #D6DAE1;", target: "_blank" }
                  = image_tag('apple.svg', alt: 'apple')
            = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mb-3' }) do |f|
              .form-group.mb-4
                %label.label.text-secondary Email Address
                = f.email_field :email, autofocus: true, class: 'form-control h-55', required: true, placeholder: 'Enter your email'
              .form-group.mb-4
                %label.label.text-secondary Password
                = f.password_field :password, autocomplete: 'new-password', class: 'form-control h-55', required: true, placeholder: '············'
              .form-group.mb-4
                %button.btn.btn-primary.fw-medium.py-2.px-3.w-100{ type: "submit" }
                  .d-flex.align-items-center.justify-content-center.py-1
                    %i.material-symbols-outlined.text-white.fs-20.me-2 login
                    %span Login
              .form-group
                %p
                  Do not have an account.
                  = link_to "Register", new_registration_path(resource_name), class: "fw-medium text-primary text-decoration-none"
              .form-group
                %p
                  Forget your passowrd.
                  = link_to "Forget Password", new_user_password_path, class: "fw-medium text-primary text-decoration-none"
