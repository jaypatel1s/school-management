.container
  .main-content.d-flex.flex-column.p-0
    .m-auto.m-1230
      .row.align-items-center
        .col-lg-6.d-none.d-lg-block
          = image_tag('forgot.jpg', alt: 'login', class: "rounded-3")
        .col-lg-6
          .mw-480.ms-lg-auto
            %a.d-inline-block.mb-4{ href: "/" }
              = image_tag('logo.svg', alt: 'login', class: "rounded-3 for-light-logo")
              = image_tag('white-logo.svg', alt: 'login', class: "rounded-3 for-dark-logo")
            %h3.fs-28.mb-2 Forgot your password?
            %p.fw-medium.fs-16.mb-4 Enter the email address you used when you joined and weâ€™ll send you instructions to reset your password.
            = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'mb-3' }) do |f|
              .form-group.mb-4
                %label.label.text-secondary Email Address
                = f.email_field :email, autofocus: true, class: 'form-control h-55', required: true, placeholder: 'Enter your email'
              .form-group.mb-4
                %button.btn.btn-primary.fw-medium.py-2.px-3.w-100{ type: "submit" }
                  .d-flex.align-items-center.justify-content-center.py-1
                    %i.material-symbols-outlined.text-white.fs-20.me-2 autorenew
                    %span Submit
              .form-group
                %p
                  Do you have an account.
                  = link_to "Login", new_user_session_path, class: "fw-medium text-primary text-decoration-none"
