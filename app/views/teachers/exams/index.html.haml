.content-wrapper
  .page-header.row
    .col-md-7
      %h3.page-title
        %span.page-title-icon.bg-primary.text-white.mr-2
          %i.fa.fa-calendar-plus-o
        My Scheduled Exams

    - if can_access?(:exams, :new)
      .col-md-5.mt-2.mt-md-0.text-right
        = link_to raw("<i class='fa fa-plus'></i>"), new_college_teachers_exam_path, { class: 'btn btn-sm btn-primary', data: { toggle: 'tooltip', placement: 'left '}, title: 'Schedule New Exam' }

  .row
    .col-12.grid-margin
      .card
        .card-body
          - if @exams.present?
            .table-responsive
              %table.table.table-hover
                %thead
                  %tr.table-primary
                    %th Exam Name
                    %th Course
                    %th Max Marks
                    %th Scheduled At
                    %th.text-right{ width: '15%','data-orderable': 'false' } Actions
                %tbody
                  - @exams.each do |exam|
                    %tr
                      %td= exam.name
                      %td= exam.course.name
                      %td= exam.max_marks
                      %td= exam.scheduled_at.strftime('%Y-%m-%d %H:%M')
                      %td.text-right
                        - if can_access?(:exams, :edit)
                          = link_to raw("<i class='fa fa-pencil-square-o'></i>"), edit_college_teachers_exam_path(current_college.slug, exam.slug), { class: 'btn-sm btn-warning px-2 py-1', 'data-toggle': 'tooltip', title: 'Edit' }
                        = link_to raw("<i class='fa fa-eye'></i>"), college_teachers_exam_path(current_college.slug, exam.slug), { class: 'btn-sm btn-info px-2 py-1 ml-1', 'data-toggle': 'tooltip', title: 'View' }
                        - if can_access?(:exams, :destroy)
                          = link_to raw("<i class='fa fa-trash-o'></i>"), college_teachers_exam_path(current_college.slug, exam.slug), { class: 'btn-sm btn-danger px-2 py-1 ml-1', 'data-toggle': 'tooltip', 'data-confirm': 'Are you sure you want to delete this exam?', title: 'Delete', method: :delete }
          - else
            %center
              %h6
                No Exams Scheduled for your assigned courses.