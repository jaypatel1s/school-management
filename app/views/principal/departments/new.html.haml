.main-content-container.overflow-hidden
  .d-flex.justify-content-between.align-items-center.flex-wrap.gap-2.mb-4
    %h3.mb-0 Department / New
    %div
      %a.ps-0.border-0.bg-transparent.lh-1.position-relative.top-2{ href: college_principal_departments_path(current_college.slug), 'data-bs-html': 'true', 'data-bs-offset': '0,4', 'data-bs-original-title': '<span>Back</span>', 'data-bs-placement': 'bottom', 'data-bs-toggle': 'tooltip', type: 'button' }
        %i.material-symbols-outlined.fs-16.text-body arrow_back
.row
  .col-md-12
    .card.mb-4
      .card-body
        = render 'form', department: @department, url: college_principal_departments_path(current_college.slug)
