.main-content-container.overflow-hidden
  .d-flex.justify-content-between.align-items-center.flex-wrap.gap-2.mb-4
    %div
      %h3.mb-0 Course / New
    %div
      %a.btn.btn-sm.btn-primary{ href: college_courses_path(current_college.slug), 'data-bs-html': 'true', 'data-bs-offset': '0,4', 'data-bs-original-title': '<span>Back</span>', 'data-bs-placement': 'bottom', 'data-bs-toggle': 'tooltip', type: 'button' }
        %i.ri-arrow-left-line
.row
  .col-md-12
    .card.mb-4
      .card-body
        = render 'form', course: @course, url: college_courses_path(current_college.slug)
