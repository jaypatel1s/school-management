                      %span Pinterest
                    %a.dropdown-item.p-0.text-center{href: "https://www.facebook.com/", target: "_blank"}
                      = image_tag('facebook.svg', alt: 'united-states', class: 'wh-25')
                      %span Facebook
                    %a.dropdown-item.p-0.text-center{href: "https://www.linkedin.com/", target: "_blank"}
