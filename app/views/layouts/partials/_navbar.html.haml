                      %span Dribbble
                    %a.dropdown-item.p-0.text-center{href: "https://www.spotify.com/", target: "_blank"}
                      = image_tag('spotify.svg', alt: 'united-states', class: 'wh-25')
                      %span Spotify
                    %a.dropdown-item.p-0.text-center{href: "https://www.github.com/", target: "_blank"}
                      = image_tag('github.svg', alt: 'united-states', class: 'wh-25')
                      %span Github
                    %a.dropdown-item.p-0.text-center{href: "https://www.google.com/drive/", target: "_blank"}
                      = image_tag('gdrive.svg', alt: 'united-states', class: 'wh-25')
                      %span GDrive
                    %a.dropdown-item.p-0.text-center{href: "https://www.trello.com/", target: "_blank"}
                      = image_tag('trello.svg', alt: 'united-states', class: 'wh-25')
                      %span Trello
                    %a.dropdown-item.p-0.text-center{href: "https://www.slak.com/", target: "_blank"}
