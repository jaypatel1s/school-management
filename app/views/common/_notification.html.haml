:javascript
  function display_notify(type, msg){
    $('.toast-body').html(msg);
    $('.bs-toast').removeClass('bg-success bg-warning bg-info bg-danger')
    $('.bs-toast').addClass('bg-'+ type)
    $('.bs-toast').fadeIn( function() {
      setTimeout( function(){
        $('.bs-toast').fadeOut("fast");
      }, 3000);
    });
  }
  $(document).ready(function(){
    var success_msg = "#{flash[:success]}"
    var alert_msg   = "#{flash[:alert]}"
    var delete_msg  = "#{flash[:delete]}"
    var notice_msg  = "#{flash[:notice]}"
    if (success_msg)
      display_notify('success', success_msg);
    if (alert_msg)
      display_notify('warning', alert_msg);
    if (delete_msg)
      display_notify('danger', delete_msg);
    if (notice_msg)
      display_notify('info', notice_msg);
  });
