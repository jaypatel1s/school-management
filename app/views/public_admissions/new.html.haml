.content-wrapper
  .page-header.row
    .col-md-7
      %h3.page-title
        %span.page-title-icon.bg-primary.text-white.mr-2
          %i.fa.fa-file-text-o
        Admission Form
        %small
          %i.fa.fa-arrow-right
          New
    .col-md-5.mt-2.mt-md-0.text-right
      %a.btn.btn-sm.btn-success{ href: public_admissions_path, data: { toggle: 'tooltip', placement: 'left' }, title: 'Public Admission' }
        %i.fa.fa-reply
  = render 'form', admission_applications: @admission_applications, url: public_admissions_path
