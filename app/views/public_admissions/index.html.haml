.content-wrapper
  .page-header.row
    .col-md-7
      %h3.page-title
        %span.page-title-icon.bg-primary.text-white.mr-2
          %i.fa.fa-file
        List of all active public applications
    .col-md-5.mt-2.mt-md-0.text-right
      -# %a.btn.btn-sm.btn-primary{ href: new_admission_application_path, data: { toggle: 'tooltip', placement: 'left '}, title: 'New Public Admission' }
        %i.fa.fa-plus

  .row
    .col-12.grid-margin
      .card
        .card-body
          .table-responsive
            %table.table.table-hover
              %thead
                %tr.table-primary
                  %th Name
                  %th Status
                  %th Start Date
                  %th End Date
                  %th Closed on
                  %th.text-right{ width: '10%','data-orderable': 'false' } Actions
              %tbody
                - @admissions.each do |admission|
                  %tr
                    %td= admission.name
                    %td= admission.status
                    %td= admission.start_date
                    %td= admission.end_date
                    %td= l(admission.closed_at, format: :long)
                    %td.text-right
                      = link_to raw("<i class='fa fa-plus'></i>"), public_admission_admission_applications_path(public_admission_slug: admission.slug), { class: 'btn-sm btn-primary px-2 py-1', 'data-toggle': 'tooltip', title: 'New Application' }
