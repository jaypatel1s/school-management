.content-wrapper
  .page-header.row
    .col-md-7
      %h3.page-title
        %span.page-title-icon.bg-primary.text-white.mr-2
          %i.fa.fa-file
        Payment Gateway
    - if can_access?(:college_payment_gateways, :new)
      .col-md-5.mt-2.mt-md-0.text-right
        %a.btn.btn-sm.btn-primary{ href: new_college_principals_college_payment_gateway_path(current_college.slug), data: { toggle: 'tooltip', placement: 'left '}, title: 'New Payment Gateway' }
          %i.fa.fa-plus

  .row
    .col-12.grid-margin
      .card
        .card-body
          - if @college_payment_gateways.present?
            .table-responsive
              %table.table.table-hover
                %thead
                  %tr.table-primary
                    %th Gateway Name
                    %th Api Key
                    %th Api Secret
                    %th Merchant Id
                    %th Active
                    %th.text-right{ width: '10%','data-orderable': 'false' } Actions
                %tbody
                  - @college_payment_gateways.each do |college_payment_gateway|
                    %tr
                      %td= college_payment_gateway.name
                      %td= college_payment_gateway.api_key
                      %td= college_payment_gateway.api_secret
                      %td= college_payment_gateway.merchant_id
                      %td= college_payment_gateway.active
                      %td.text-right
                        - if can_access?(:college_payment_gateways, :edit)
                          = link_to raw("<i class='fa fa-pencil-square-o'></i>"), edit_college_principals_college_payment_gateway_path(current_college.slug, college_payment_gateway.slug), { class: 'btn-sm btn-warning px-2 py-1', 'data-toggle': 'tooltip', title: 'Edit' }
                        - if can_access?(:college_payment_gateways, :destroy)
                          = link_to raw("<i class='fa fa-trash-o'></i>"), college_principals_college_payment_gateway_path(current_college.slug, college_payment_gateway.slug), { class: 'btn-sm btn-danger px-2 py-1', 'data-toggle': 'tooltip', 'data-confirm': 'Are you sure?', title: 'Delete', method: :delete }
          - else
            %center
              %h6
                No Payment Gateway Found.
