= form_with model: [:school, course], local: true, html: { multipart: true }, url: url, class: 'form' do |f|
  .row
    .col-lg-12.col-sm-6
      .form-group.mb-4
        %label.label.text-secondary.required= "Select Department"
        = f.select :department_id, current_college.departments.map { |department| [department.name, department.id] }, { prompt: 'Select Department' }, include_blank: 'All', class: 'form-control'
    .col-lg-6.col-sm-6
      .form-group.mb-4
        %label.label.text-secondary.required= t('issues.courses.table.name')
        = f.text_field :name, class: "form-control #{error?(@course.errors, :name)}", value: f.object.name, placeholder: 'Name', required: true
        = print_error(@course.errors, :name)
    .col-lg-6.col-sm-6
      .form-group.mb-4
        %label.label.text-secondary.required= t('issues.courses.table.credits')
        = f.number_field :credits, class: "form-control #{error?(@course.errors, :credits)}", value: f.object.credits, placeholder: 'Credits', required: true
        = print_error(@course.errors, :credits)
    .col-lg-12
      .d-flex.flex-wrap.gap-3
        %button.btn.btn-primary.py-2.px-4.fw-medium.fs-16.text-white{ type: 'submit', data: { confirm: 'Do you want to save the changes?' } }
          %i.ri-add-line.text-white.fw-medium
          = t('issues.users.table.save')

