.content-wrapper
  .page-header.row
    .col-md-7
      %h3.page-title
        %span.page-title-icon.bg-primary.text-white.mr-2
          %i.fa.fa-folder
        Fee Structure
        %small
          %i.fa.fa-arrow-right
          Edit
    .col-md-5.mt-2.mt-md-0.text-right
      %a.btn.btn-sm.btn-success{ href: college_principals_fee_structures_path(current_college.slug), data: { toggle: 'tooltip', placement: 'left' }, title: 'Course' }
        %i.fa.fa-reply
  = render 'form', fee_structure: @fee_structure, url: college_principals_fee_structure_path(current_college.slug, @fee_structure.slug)
