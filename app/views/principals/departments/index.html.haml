.content-wrapper
  .page-header.row
    .col-md-7
      %h3.page-title
        %span.page-title-icon.bg-primary.text-white.mr-2
          %i.fa.fa-gear
        Departments
    - if can_access?(:departments, :new)
      .col-md-5.mt-2.mt-md-0.text-right
        %a.btn.btn-sm.btn-primary{ href: new_college_principals_department_path(current_college.slug), data: { toggle: 'tooltip', placement: 'left '}, title: 'New Department' }
          %i.fa.fa-plus

  .row
    .col-12.grid-margin
      .card
        .card-body
          - if @departments.present?
            .table-responsive
              %table.table.table-hover
                %thead
                  %tr.table-primary
                    %th Name
                    %th.text-right{ width: '10%','data-orderable': 'false' } Action
                %tbody
                  - @departments.each do |department|
                    %tr
                      %td= department.name
                      %td.text-right
                        - if can_access?(:departments, :edit)
                          = link_to raw("<i class='fa fa-pencil-square-o'></i>"), edit_college_principals_department_path(current_college.slug, department.slug), { class: 'btn-sm btn-warning px-2 py-1', 'data-toggle': 'tooltip', title: 'Edit' }
                        - if can_access?(:departments, :destroy)
                          = link_to raw("<i class='fa fa-trash-o'></i>"), college_principals_department_path(current_college.slug, department.slug), { class: 'btn-sm btn-danger px-2 py-1', 'data-toggle': 'tooltip', 'data-confirm': 'Are you sure?', title: 'Delete', method: :delete }
          - else
            %center
              %h6
                No Department Found.
