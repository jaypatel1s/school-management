= form_with model: [:school, user], local: true, html: { multipart: true }, url: url, class: 'form' do |f|
  .row
    .col-lg-6.col-sm-6
      .form-group.mb-4
        %label.label.text-secondary.required= t('issues.users.table.name')
        = f.text_field :name, class: "form-control h-55 #{error?(@user.errors, :name)}", value: f.object.name, placeholder: 'Name', required: true
        = print_error(@user.errors, :name)
    .col-lg-6.col-sm-6
      .form-group.mb-4
        %label.label.text-secondary.required= t('issues.users.table.email')
        = f.email_field :email, class: "form-control h-55 #{error?(@user.errors, :email)}", value:  f.object.email, placeholder: 'Email'
        = print_error(@user.errors, :email)
    .col-lg-12.col-sm-6
      .form-group.mb-4
        %label.label.text-secondary.required= t('issues.users.table.role')
        = f.select :role, User.roles.keys.map { |role| [t("roles.#{role}"), role] }, {}, class: "form-control h-55 #{error?(@user.errors, :role)}"
        = print_error(@user.errors, :role)
    .col-lg-6.col-sm-6
      .form-group.mb-4
        %label.label.text-secondary.required= t('issues.users.table.password')
        = f.password_field :password, class: "form-control h-55 #{error?(@user.errors, :password)}", value: f.object.password, placeholder: 'Password', required: true
        = print_error(@user.errors, :password)
    .col-lg-6.col-sm-6
      .form-group.mb-4
        %label.label.text-secondary.required= t('issues.users.table.password_confirmation')
        =  f.password_field :password_confirmation, class: "form-control h-55 #{error?(@user.errors, :password_confirmation)}", value:  f.object.password_confirmation, placeholder: 'Password Confirmation'
        = print_error(@user.errors, :password_confirmation)
    .col-lg-12
      .d-flex.flex-wrap.gap-3
        %button.btn.btn-primary.py-2.px-4.fw-medium.fs-16.text-white{ type: 'submit', data: { confirm: 'Do you want to save the changes?' } }
          %i.ri-add-line.text-white.fw-medium
          = t('issues.users.table.save')
