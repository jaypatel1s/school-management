.row
  .col-md-12.grid-margin.stretch-card
    .card
      .card-body
        = form_with model: [:school, semester], local: true, html: { multipart: true }, url: url, class: 'form' do |f|
          .row
            %div{ class: "col-md-4 form-group #{ error?(semester.errors, :name) }" }
              = f.label :name, class: 'col-form-label' do
                Name
                %span
                  %i.fa.fa-question-circle-o{ 'data-toggle': 'tooltip', title: 'Name' }
              = f.text_field :name, class: 'form-control', autocomplete: 'off', placeholder: 'Semester name'
              = print_error(semester.errors, :name)
            .col-1
              .form-group
              = f.label :current, class: 'col-form-label' do
                Current
              %div
                %label.switch
                  = f.check_box :current, class: 'switch-slider', type: 'checkbox'
                  %span.slider.round
          .row.mt-4
            .col-12
              = f.submit "Submit", class: "btn btn-primary btn-block"
